<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.thechance.happysocialmedia.ui.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_createPostFragment"
            app:destination="@id/createPostFragment" />
        <action
            android:id="@+id/action_homeFragment_to_postFragment"
            app:destination="@id/postFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.thechance.happysocialmedia.ui.search.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search"/>
    <fragment
        android:id="@+id/giftsShopFragment"
        android:name="com.thechance.happysocialmedia.ui.giftsShop.GiftsShopFragment"
        android:label="GiftsShopFragment"
        tools:layout="@layout/fragment_gifts_shop"/>
    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.thechance.happysocialmedia.ui.notification.NotificationFragment"
        android:label="NotificationFragment"
        tools:layout="@layout/fragment_notification"/>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.thechance.happysocialmedia.ui.profile.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile_animated">
        <action
            android:id="@+id/action_profileFragment_to_postFragment"
            app:destination="@id/postFragment" />
    </fragment>
    <fragment
        android:id="@+id/postFragment"
        android:name="com.thechance.happysocialmedia.ui.postDetails.PostDetailsFragment"
        android:label="PostFragment"
        tools:layout="@layout/fragment_post_details">
        <argument
            android:name="post"
            app:argType="com.thechance.happysocialmedia.domain.models.Post"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/createPostFragment"
        android:name="com.thechance.happysocialmedia.ui.createPost.CreatePostFragment"
        android:label="CreatePostFragment"
        tools:layout="@layout/fragment_create_post"/>

</navigation>