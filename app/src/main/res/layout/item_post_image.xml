<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.App.CardView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/post_image_height"
        android:layout_marginStart="@dimen/margin2x"
        android:layout_marginTop="@dimen/margin2x"
        android:layout_marginEnd="@dimen/margin2x"
        app:cardCornerRadius="@dimen/radius2x">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_post"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/test_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_image_profile"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize16dp" />


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/layout_image_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin2x"
                app:cardBackgroundColor="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/image_post"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize25Percent"
                app:strokeColor="@color/brand_color"
                app:strokeWidth="3dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image_profile"
                    android:layout_width="@dimen/size48dp"
                    android:layout_height="@dimen/size48dp"
                    android:padding="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/test_profile"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize25Percent"
                    app:strokeColor="@android:color/transparent"
                    app:strokeWidth="2dp" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin1x"
                android:alpha="0.87"
                android:elevation="3dp"
                android:shadowColor="@color/shade_primary_color"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:textAppearance="@style/TextAppearance.App.Title"
                app:layout_constraintBottom_toBottomOf="@+id/layout_image_profile"
                app:layout_constraintStart_toEndOf="@id/layout_image_profile"
                app:layout_constraintTop_toTopOf="@id/layout_image_profile"
                tools:text="Shahad Abdulhasan" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/shape_shadow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="@id/text_post" />

            <TextView
                android:id="@+id/text_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="1dp"
                android:padding="@dimen/margin2x"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="@color/background_color"
                app:layout_constraintBottom_toTopOf="@id/button_downvote"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="Subscribe today to receive amazing Figma resources for free on your inboxSubscribe This UI sticker sheet is a library of basic Material Design 2 styles and components. " />

            <TextView
                android:id="@+id/text_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin2x"
                android:alpha="0.6"
                android:elevation="1dp"
                android:textAppearance="@style/TextAppearance.App.SubTitle"
                app:layout_constraintBottom_toBottomOf="@+id/button_upvote"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/button_upvote"
                tools:text="12 March" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_upvote"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="@dimen/size28dp"
                android:layout_height="@dimen/size28dp"
                android:layout_marginEnd="@dimen/margin1x"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                app:icon="@drawable/ic_baseline_keyboard_arrow_up_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="@dimen/size24dp"
                app:iconTint="@color/brand_color"
                app:layout_constraintBottom_toBottomOf="@id/text_upvote"
                app:layout_constraintEnd_toStartOf="@id/text_upvote"
                app:layout_constraintTop_toTopOf="@id/text_upvote"
                app:strokeColor="@color/brand_color" />


            <TextView
                android:id="@+id/text_upvote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin2x"
                android:alpha="0.87"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="@color/background_color"
                app:layout_constraintBottom_toBottomOf="@id/button_downvote"
                app:layout_constraintEnd_toStartOf="@id/button_downvote"
                app:layout_constraintTop_toTopOf="@id/button_downvote"
                tools:text="3.5 K" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_downvote"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="@dimen/size28dp"
                android:layout_height="@dimen/size28dp"
                android:layout_marginEnd="@dimen/margin1x"
                android:layout_marginBottom="@dimen/margin2x"
                android:alpha="0.38"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                app:icon="@drawable/ic_baseline_keyboard_arrow_down_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="@dimen/size24dp"
                app:iconTint="@color/background_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/text_downvote" />

            <TextView
                android:id="@+id/text_downvote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin2x"
                android:alpha="0.87"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="@color/background_color"
                app:layout_constraintBottom_toBottomOf="@+id/button_downvote"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/button_downvote"
                tools:text="3.5 K" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>