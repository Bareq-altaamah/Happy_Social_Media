<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.thechance.happysocialmedia.ui.profile.ProfileViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_cover"
            android:layout_width="match_parent"
            android:layout_height="164dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image_cover_test"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:background="@drawable/profile_shadow"
            app:layout_constraintBottom_toBottomOf="@id/image_cover" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/image_profile_container"
            android:layout_width="91dp"
            android:layout_height="91dp"
            android:layout_margin="@dimen/margin1x"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="@dimen/radius2x"
            app:layout_constraintBottom_toBottomOf="@+id/image_cover"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.5"
            app:strokeColor="@color/brand_color"
            app:strokeWidth="3dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/image_profile_test" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/text_username"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginTop="@dimen/margin2x"
            android:gravity="center"
            android:textColor="@color/shade_primary_color"
            android:textSize="@dimen/textSize_22"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_profile_container"
            tools:text="Sakura" />

        <TextView
            android:id="@+id/text_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/shade_ternary_color"
            android:textSize="@dimen/textSize_12"
            app:layout_constraintEnd_toEndOf="@id/text_username"
            app:layout_constraintStart_toStartOf="@id/text_username"
            app:layout_constraintTop_toBottomOf="@id/text_username"
            tools:text="Happiness is waiting for you â˜º." />

        <androidx.cardview.widget.CardView
            android:id="@+id/status_container"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginHorizontal="@dimen/margin2x"
            android:layout_marginTop="@dimen/margin7x"
            android:elevation="@dimen/elevation1x"
            app:cardCornerRadius="@dimen/textSize_12"
            app:layout_constraintEnd_toEndOf="@+id/text_bio"
            app:layout_constraintStart_toStartOf="@+id/text_bio"
            app:layout_constraintTop_toBottomOf="@+id/text_bio" />

        <TextView
            android:id="@+id/text_followers_numbers"
            style="@style/TextViewNumber.TextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintEnd_toStartOf="@id/text_following_numbers"
            app:layout_constraintStart_toStartOf="@id/status_container"
            app:layout_constraintTop_toTopOf="@id/status_container"
            tools:text="2.51k" />

        <TextView
            android:id="@+id/text_followers"
            style="@style/TextViewStatus.TextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/follower"
            app:layout_constraintEnd_toEndOf="@id/text_followers_numbers"
            app:layout_constraintStart_toStartOf="@id/text_followers_numbers"
            app:layout_constraintTop_toBottomOf="@id/text_followers_numbers" />

        <TextView
            android:id="@+id/text_following_numbers"
            style="@style/TextViewNumber.TextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/text_followers_numbers"
            app:layout_constraintEnd_toStartOf="@id/text_voteup_number"
            app:layout_constraintStart_toEndOf="@id/text_followers_numbers"
            app:layout_constraintTop_toTopOf="@id/text_followers_numbers"
            tools:text="2.10k" />

        <TextView
            android:id="@+id/text_following"
            style="@style/TextViewStatus.TextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/following"
            app:layout_constraintEnd_toEndOf="@id/text_following_numbers"
            app:layout_constraintStart_toStartOf="@id/text_following_numbers"
            app:layout_constraintTop_toBottomOf="@id/text_following_numbers" />

        <TextView
            android:id="@+id/text_voteup_number"
            style="@style/TextViewNumber.TextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/text_following_numbers"
            app:layout_constraintEnd_toStartOf="@id/text_votedown_number"
            app:layout_constraintStart_toEndOf="@id/text_following_numbers"
            app:layout_constraintTop_toTopOf="@id/text_following_numbers"
            tools:text="2.5k" />

        <TextView
            android:id="@+id/text__voteUp"
            style="@style/TextViewStatus.TextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vote_up"
            app:layout_constraintEnd_toEndOf="@id/text_voteup_number"
            app:layout_constraintStart_toStartOf="@id/text_voteup_number"
            app:layout_constraintTop_toBottomOf="@id/text_voteup_number" />

        <TextView
            android:id="@+id/text_votedown_number"
            style="@style/TextViewNumber.TextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/text_voteup_number"
            app:layout_constraintEnd_toEndOf="@id/status_container"
            app:layout_constraintStart_toEndOf="@id/text_voteup_number"
            app:layout_constraintTop_toTopOf="@id/text_voteup_number"
            tools:text="2.9k" />

        <TextView
            android:id="@+id/text__voteDown"
            style="@style/TextViewStatus.TextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vote_down"
            app:layout_constraintEnd_toEndOf="@id/text_votedown_number"
            app:layout_constraintStart_toStartOf="@id/text_votedown_number"
            app:layout_constraintTop_toBottomOf="@id/text_votedown_number" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_ProfilePost"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/margin2x"
            android:layout_marginTop="@dimen/margin2x"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/status_container"
            tools:listitem="@tools:sample/avatars" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>