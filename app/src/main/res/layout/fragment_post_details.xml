<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.thechance.happysocialmedia.ui.postDetails.PostDetailsViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        >

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_color"
                app:contentScrim="@color/tool_bar_color"
                app:expandedTitleGravity="top"
                app:expandedTitleMarginTop="16dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:title="@string/post">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/test_post_image"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_color"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image_profile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="16dp"
                    android:elevation="1dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/test_profile"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize25Percent" />

                <View
                    android:id="@+id/layout_image_profile"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:background="@drawable/outline_profile_picture_small"
                    app:layout_constraintBottom_toBottomOf="@+id/image_profile"
                    app:layout_constraintEnd_toEndOf="@+id/image_profile"
                    app:layout_constraintStart_toStartOf="@id/image_profile"
                    app:layout_constraintTop_toTopOf="@+id/image_profile" />

                <TextView
                    android:id="@+id/label_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacingSmall"
                    android:text="Shahad Abdulhasan"
                    android:textColor="@color/shade_primary_color"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/layout_image_profile"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/layout_image_profile"
                    app:layout_constraintTop_toTopOf="@+id/layout_image_profile" />

                <TextView
                    android:id="@+id/label_post_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacingMedium"
                    android:text="Subscribe today to receive amazing Figma resources for free on your inboxSubscribe This UI sticker sheet. Subscribe today to receive amazing Figma resources for free on your inboxSubscribe This UI sticker sheet.Subscribe today to receive amazing Figma resources for free on your inboxSubscribe This UI sticker sheet. Subscribe today to receive amazing Figma resources for free on your inboxSubscribe This UI sticker sheet.â€¨Subscribe today to receive amazing Figma resources for free on your inboxSubscribe This UI sticker sheet. Subscribe today to receive amazing Figma resources for free on your inboxSubscribe This UI sticker sheet.Subscribe today to receive amazing Figma resources for free on your inboxSubscribe This UI sticker sheet. Subscribe today to receive amazing Figma resources for free on your inboxSubscribe This UI sticker sheet. amazing Figma resources for free on your inboxSubscribe This UI sticker sheet.Subscribe today to receive amazing Figma resources for free on your inboxSubscribe This UI sticker sheet. Subscribe today to receive amazing Figma resources for free on your inboxSubscribe This UI sticker sheet."
                    android:textColor="@color/shade_primary_color"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/image_profile" />

                <TextView
                    android:id="@+id/label_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacingMedium"
                    android:alpha="0.6"
                    android:text="12 March"
                    android:textColor="@color/shade_primary_color"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/button_upvote"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/button_upvote" />

                <com.google.android.material.button.MaterialButton
                    android:id="@id/button_upvote"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_margin="@dimen/spacingMedium"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:padding="0dp"
                    app:icon="@drawable/ic_baseline_keyboard_arrow_up_24"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconTint="@color/brand_color"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/label_upvote"
                    app:layout_constraintTop_toBottomOf="@+id/label_post_content"
                    app:layout_constraintVertical_bias="0.0"
                    app:strokeColor="@color/brand_color" />

                <TextView
                    android:id="@+id/label_upvote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacingMedium"
                    android:alpha="0.87"
                    android:text="3.5 K"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="@color/shade_primary_color"
                    app:layout_constraintBottom_toBottomOf="@+id/button_upvote"
                    app:layout_constraintEnd_toStartOf="@id/button_down_vote"
                    app:layout_constraintTop_toTopOf="@+id/button_upvote" />

                <com.google.android.material.button.MaterialButton
                    android:id="@id/button_down_vote"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_margin="@dimen/spacingMedium"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:padding="0dp"
                    app:icon="@drawable/ic_baseline_keyboard_arrow_up_24"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconTint="@color/shade_ternary_color"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/label_down_vote"
                    app:layout_constraintTop_toBottomOf="@+id/label_post_content"
                    app:layout_constraintVertical_bias="0.0"
                    app:strokeColor="@color/shade_ternary_color" />

                <TextView
                    android:id="@+id/label_down_vote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacingMedium"
                    android:alpha="0.87"
                    android:text="3.5 K"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="@color/shade_primary_color"
                    app:layout_constraintBottom_toBottomOf="@+id/button_down_vote"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/button_down_vote" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.AppBarLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>